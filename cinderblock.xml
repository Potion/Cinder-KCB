<?xml version="1.0" encoding="UTF-8" ?>
<cinder>
<block
	name="MsKinect"
	id="mskinect.bantherewind.com"
	author="Stephen Schieberl"
	license="BSD"
	summary="Kinect support using the official Microsoft SDK"
	>
	<supports os="msw" />
	<header>src/Kinect.h</header>
	<source>src/Kinect.cpp</source>
	<header>src/FaceTracker.h</header>
	<source>src/FaceTracker.cpp</source>
	<includePath>src/</includePath>
	<includePath absolute="true">$(KINECTSDK10_DIR)/inc</includePath>
	<includePath absolute="true">$(FTSDK_DIR)/inc</includePath>
	<libraryPath absolute="true">$(KINECTSDK10_DIR)/lib/x86</libraryPath>
	<libraryPath absolute="true">$(FTSDK_DIR)/lib/x86</libraryPath>
	<staticLibrary absolute="true">comsuppw.lib</staticLibrary>
	<staticLibrary absolute="true">FaceTrackLib.lib</staticLibrary>
	<staticLibrary absolute="true">KinectWrapper.lib</staticLibrary>
	<staticLibrary absolute="true">Kinect10.lib</staticLibrary>
	<platform os="msw" compiler="vc11">
		<platform config="debug">
			<buildCopy>lib/KinectWrapper.dll</buildCopy>
			<buildCopy>lib/FaceTrackData.dll</buildCopy>
		</platform>
		<platform config="release">
			<buildCopy>lib/KinectWrapper.dll</buildCopy>
			<buildCopy>lib/FaceTrackData.dll</buildCopy>
		</platform>
	</platform>
</block>
<template>templates/Basic/template.xml</template>
</cinder>